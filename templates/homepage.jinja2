</head>

<style>
	html {
		scroll-behavior: smooth;
	}

	.navlink.active {
		color: dodgerblue;
	}

	.modules-container {
		margin: 25px 0px 25px;
	}

	.margin-md {
		margin: 10px 0px 10px;
	}

	.module .thumbnail-container {
		display: inline-block; width: 30%
	}

	.module .text-container {
		position: relative;
		display: inline-block; 
		width: 60%; 
		padding: 10px;
	}

	.locked-overlay {
		position: absolute;
		top: 0px;
		left: 0px;
		height: 100%;
		width: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
		background: rgba(245, 245, 245, .5);
	}

	.locked-overlay i {
		font-size: 50px;
		color: gray;
	}

</style>

<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
	  	<a class="navbar-brand" href="#">LionBase Certificate Program</a>
	  	<!-- <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
	    	<span class="navbar-toggler-icon"></span>
	  	</button> -->

	  	<!-- <div class="collapse navbar-collapse" id="navbarSupportedContent"> -->
	    	<ul class="navbar-nav mr-auto">
		      	<li class="nav-item active">
		        	<a class="nav-link" href="/homepage">Home <span class="sr-only">(current)</span></a>
		      	</li>
		      	<li class="nav-item">
		        	<a class="nav-link" href="/module">Modules</a>
		      	</li>
		      	<li class="nav-item">
		        	<a class="nav-link" href="#">Exercises</a>
		      	</li>
	      	</ul>
	      	<span class="my-2 my-lg-0">
		      	<a class="nav-link" href="/login">Log Out</a>
		    </span>
	  	<!-- </div> -->
	</nav>

	<ul class="nav flex-column" style="width: 250px; position: fixed;">
		Outline
		{% for module in all_modules %}
	  	<li class="nav-item">
	    	<!-- <a class="nav-link active" href="#">Active</a> -->
	    	<a class="nav-link" href="#{{module['number']}}">{{module["number"]}}: {{module["name"]}}</a>
	  	</li>
	  	{% endfor %}
	</ul>

	<!-- <div class="limiter"> -->
		<!-- <div class="container-login100" style="background-image: url('static/images/img-01.jpg');"> -->
			<!-- <div class="wrap-login100"> -->
			<div class="container" style="width: 50%">
				<div class="announcements-container" style="display: block; margin: 25px 0px 25px;">
					<div id="announcements" class="carousel slide" data-ride="carousel">
					  	<div class="carousel-inner">
						    <div class="carousel-item active">
						      	<img class="d-block w-100" src="https://miro.medium.com/max/1170/1*HAFNDZXsm4TvFLJ_wPwRBw.png" alt="First slide">
						      	<div class="carousel-caption d-none d-md-block">
								</div>
						    </div>
						    <div class="carousel-item">
						      	<img class="d-block w-100" src="https://miro.medium.com/max/1170/1*HAFNDZXsm4TvFLJ_wPwRBw.png" alt="Second slide">
						      	<div class="carousel-caption d-none d-md-block">
								</div>
						    </div>
						    <div class="carousel-item">
						      	<img class="d-block w-100" src="https://miro.medium.com/max/1170/1*HAFNDZXsm4TvFLJ_wPwRBw.png" alt="Third slide">
						      	<div class="carousel-caption d-none d-md-block">
								</div>
						    </div>
						</div>
						<a class="carousel-control-prev" href="#announcements" role="button" data-slide="prev">
						    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
						    <span class="sr-only">Previous</span>
						</a>
						<a class="carousel-control-next" href="#announcements" role="button" data-slide="next">
						    <span class="carousel-control-next-icon" aria-hidden="true"></span>
						    <span class="sr-only">Next</span>
						</a>
					</div>
				</div>

				<div class="modules-container">
					{% for module in all_modules %}
						<div class="module card flex-row flex-wrap margin-md">
					        <a name="{{module['number']}}"></a>
					        <div class="thumbnail-container card-header border-0">
					            <img src="/static/images/logo.png" alt="" style="max-width: 100%; max-height: 100%;">
					        </div>
					        <div class="text-container card-block px-2">
					            <h4 class="card-title">Module {{module["number"]}}: {{module["name"]}}</h4>
					            <p class="card-text">{{module["description"]}}</p>
								<div class="margin-md">
					            	<a href="#" class="btn btn-primary {{'disabled' if not module['completed']}}">Get Started</a>
					            </div>
					        </div>
					        {{"<div class='locked-overlay'><i class='fas fa-lock'></i></div>" if not module["completed"]}}
	    				</div>
    				{% endfor %}
				</div>
			</div>
			<!-- </div> -->
