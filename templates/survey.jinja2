{% extends "layout.jinja2" %}


<html lang="en">
    {% block head %}
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% block title %}
        <title>Survey Submission</title>
        {% endblock %}
    </head>
    {% endblock %}

    {% block content %}
    <body >
        <div class="container">
            <div class="row " style="margin-top: 50px">
                <div class="col-md-6 col-md-offset-3 form-container">
                    <h2>Survey</h2>
                    <p> Please fill out this quick survey: </p>
                    <form role="form" method="post" id="reused_form">
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <label for="name"> Username:</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>
                        <div class="col-sm-6 form-group">
                            <label for="email"> Email:</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                    </div>
                        <div class="row">
                            <div class="col-sm-12 form-group">
                                <p> The following questions are on a scale of 1 to 5, with 1 being the lowest rating, and 5 being the highest: </p>
                                <label>How would you rate your experience with the modules so far? </label>
                                <p>
                                    <label class="radio-inline" style="margin-left: 20px">
                                        <input type="radio" name="q1" value="1" required>
                                        1
                                    </label>
                                    <label class="radio-inline" style="margin-left: 20px">
                                        <input type="radio" name="q1" value="2" >
                                        2
                                    </label>
                                    <label class="radio-inline" style="margin-left: 20px">
                                        <input type="radio" name="q1" value="3" >
                                        3
                                    </label>
                                    <label class="radio-inline" style="margin-left: 20px">
                                        <input type="radio" name="q1" value="4" >
                                        4
                                    </label>
                                    <label class="radio-inline" style="margin-left: 20px">
                                        <input type="radio" name="q1" value="5" >
                                        5
                                    </label>
                                </p>
                                <label>How would you rate the overall usefulness of the module you just completed? </label>
                                <p>
                                    <label class="radio-inline" style="margin-left: 20px">
                                        <input type="radio" name="q2" value="1" required>
                                        1
                                    </label>
                                    <label class="radio-inline" style="margin-left: 20px">
                                        <input type="radio" name="q2" value="2" >
                                        2
                                    </label>
                                    <label class="radio-inline" style="margin-left: 20px">
                                        <input type="radio" name="q2" value="3" >
                                        3
                                    </label>
                                    <label class="radio-inline" style="margin-left: 20px">
                                        <input type="radio" name="q2" value="4" >
                                        4
                                    </label>
                                    <label class="radio-inline" style="margin-left: 20px">
                                        <input type="radio" name="q2" value="5" >
                                        5
                                    </label>
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 form-group">
                                <label for="q3"> Did you run into any issues while completing the module?</label>
                                <textarea class="form-control" type="textarea" name="q3" id="q3" placeholder="Don't be shy..." maxlength="6000" rows="3"></textarea>
                            </div>
                            <div class="col-sm-12 form-group">
                                <label for="q4"> Is there anything you'd like for us to improve?</label>
                                <textarea class="form-control" type="textarea" name="q4" id="q4" placeholder="We'd love to hear from you!" maxlength="6000" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 form-group">
                                <button type="submit" name="submit" id="submit">Submit </button>
                            </div>
                        </div>
                    </form>
                    {% if success %}
                    <div id="success_message" style="width:100%; height:100%; display:none; "> <h3>Posted your survey successfully!</h3> </div>
                    {% if element == maxelements %}
                    <meta http-equiv="Refresh" content="4; url=/survey/{{module_number}}/{{submodule_number}}" />
                    <p>Please click <a href="/survey/{{module_number}}/{{submodule_number}}">here if your browser doesn't take you to the next page</a>.</p>
                    {% endif %}
                    {% endif %}
                    {% if not success and fail %}
                    <div id="error_message" style="width:100%; height:100%; display:none; "> <h3>Error</h3> Sorry, there was an error sending your survey. </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </body>
    {% endblock %}
</html>
