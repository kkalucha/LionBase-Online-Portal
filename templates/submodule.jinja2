{% extends "layout.jinja2" %}

{% block title %}
<title>Submodule {{module_number}}.{{submodule_number}}</title>
{% endblock %}

{% block style %}
<style>
.customButton{
    top : 0;
    right : 0;
    position: fixed;
 }
</style>
{% endblock %}
  
{% block content %}
<div class="card text-center" style="margin: 20px 0px 20px">
	<div class="card-header">
		Go through this jupyter notebook carefully
	</div>
	<div class="card-body">

	{% if str(kind) == 'case' %}
	<p class="card-text">
		Once you are done, click on complete to unlock the next submodule!
	</p>

	<div style="float: right">
	    <a href="/complete/{{module_number}}/{{submodule_number}}" class="btn btn-primary">Mark as Completed</a>
	</div>

	{% endif %}


	{% if str(kind) == 'theory' %}
	<p class="card-text">
		Once you are done, click on Next to go to the next segment!
	</p>

	<div style="float: right">
	    <a href="/modules/{{module_number}}/{{submodule_number}}/case" class="btn btn-primary">Next</a>
	</div>

	{% endif %}


	<div style="float: left">
	    <a href="/modules" class="btn btn-primary">Go back to Modules</a>
	</div>
	</div>
</div>

<div class="embed-responsive embed-responsive-16by9">
	<iframe src="/notebook/{{module_number}}_{{submodule_number}}_{{kind}}.html"></iframe>
</div>

<div style="padding-top: 50px">
<div class="card text-center" style="margin: 20px 0px 20px">
	<div class="card-body">

	<div style="float: right">
	    <a href="/complete/{{module_number}}/{{submodule_number}}" class="btn btn-primary">Mark as Completed</a>
	</div>

	<div style="float: left">
	    <a href="/modules" class="btn btn-primary">Go back to Modules</a>
	</div>

	</div>
</div>
</div>
{% endblock %}


